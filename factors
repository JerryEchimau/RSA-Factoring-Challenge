#!/usr/bin/python3

import sys
import random

def gcd(a, b):
    """Calculates the greatest common divisor (GCD) of two numbers."""

    while b:
        a, b = b, a % b
    return a

def pollard_rho(n):
    """Factorizes a composite number n using the Pollard-Rho method."""

    if n % 2 == 0:
        return 2, n // 2  # Handle even numbers efficiently

    x = random.randint(2, n - 2)
    y = x
    d = 1

    while d == 1:
        x = (x * x + 1) % n
        y = (y * y + 1) % n
        y = (y * y + 1) % n  # Two iterations for y
        d = gcd(abs(x - y), n)

    if d == n:
        return None  # No factors found
    else:
        return d, n // d


def main(filename):
    """
    reads numbers from a file line by line and 
    attempts to factorize them using factorize()
    """

    try:
        with open(filename, "r") as file:
            for line in file:
                number = int(line.strip())
                factors = pollard_rho(number)
                if factors:
                    print(f"{number}={factors[0]}*{factors[1]}")
                else:
                    root = int(number ** 0.5)
                    if (root * root == number):
                        print(f"{number}={root}*{root}")
                    else:
                        print(f"{number} is prime")
    except FileNotFoundError:
        print(f"Error: file {filename} not found")
    except ValueError:
        print(f"Error: invalid number in file {filename}")

if __name__ == "__main__":
    if (len(sys.argv) != 2):
        print("Usage: factors <file>")
        sys.exit(1)

    filename = sys.argv[1]
    main(filename)
